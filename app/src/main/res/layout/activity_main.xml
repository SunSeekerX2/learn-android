<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".ui.activity.MainActivity">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12sp">

    <Button
      android:id="@+id/btn_lifecycle"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Life_Cycle"
      android:textAllCaps="false" />

    <Button
      android:id="@+id/btn_viewmodel"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="View_Model"
      android:textAllCaps="false" />

    <Button
      android:id="@+id/btn_viewmodel_with_livedata"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="View_Model_With_LiveData"
      android:textAllCaps="false" />

    <Button
      android:id="@+id/btn_viewmodel_with_databinding"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="ViewModel_With_DataBinding"
      android:textAllCaps="false" />

    <Button
      android:id="@+id/btn_sp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Shared_Preferences"
      android:textAllCaps="false" />

    <View
      android:id="@+id/divider"
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_marginTop="12sp"
      android:layout_marginBottom="12sp"
      android:background="?android:attr/listDivider" />

    <Button
      android:id="@+id/btn_demo_score"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Demo_Score"
      android:textAllCaps="false" />

    <Button
      android:id="@+id/btn_demo_calc"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Demo_Calc"
      android:textAllCaps="false" />

    <Button
      android:id="@+id/btn_demo_words"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Demo_Words"
      android:textAllCaps="false" />

    <Button
      android:id="@+id/btnDemoButtonNavigation"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Demo_Tabbar"
      android:textAllCaps="false" />

    <Button
      android:id="@+id/btnDemoPaging"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Demo_Paging"
      android:textAllCaps="false" />

    <Button
      android:id="@+id/btnDemoSerializable"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Demo_Serializable"
      android:textAllCaps="false" />

  </LinearLayout>
</ScrollView>